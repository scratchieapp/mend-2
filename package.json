{
  "name": "@mend/monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@mend/operations",
    "dev:ops": "npm run dev --workspace=@mend/operations",
    "dev:marketing": "npm run dev --workspace=@mend/marketing",
    "build:shared": "npm run build --workspace=@mend/shared-utils",
    "build": "npm run build:shared && npm run build:marketing && npm run build:ops",
    "build:ops": "npm run build --workspace=@mend/operations",
    "build:marketing": "npm run build --workspace=@mend/marketing",
    "lint": "npm run lint --workspace=@mend/operations && npm run lint --workspace=@mend/marketing",
    "preview": "vite preview",
    "create-demo-users": "node scripts/create-demo-users.js",
    "vercel-build": "npm run build:shared && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.5.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "lovable-tagger": "^1.0.19",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
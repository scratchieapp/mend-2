{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/operations/(.*)",
      "destination": "/operations/$1",
      "has": [
        {
          "type": "host",
          "value": "(?<host>accounts\\.mendplatform\\.au|localhost)"
        }
      ]
    },
    {
      "source": "/operations",
      "destination": "/operations/index.html",
      "has": [
        {
          "type": "host",
          "value": "(?<host>accounts\\.mendplatform\\.au|localhost)"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/operations/$1",
      "has": [
        {
          "type": "host",
          "value": "accounts.mendplatform.au"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/marketing/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
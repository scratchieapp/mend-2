{
  "version": 2,
  "builds": [
    {
      "src": "apps/operations/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../../dist/operations"
      }
    },
    {
      "src": "apps/marketing/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../../dist/marketing"
      }
    }
  ],
  "routes": [
    {
      "src": "/operations(.*)",
      "dest": "/dist/operations/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/marketing/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}